#!/usr/bin/env bash

KIT=$(cd "$(dirname $(readlink -f ${BASH_SOURCE[0]}))/.." &>/dev/null && pwd)
# Check if "kit" is in node_modules/.bin
[ -L $BASH_SOURCE ] &&
    [[ $BASH_SOURCE =~ "node_modules" ]] &&
    KIT="$(
        cd "$(dirname "$0")/.."
        pwd
    )/@johnlindquist/kit" &&
    KENV="$(
        cd "$(dirname "$0")/../.."
        pwd
    )"

KIT_NODE="${KIT_NODE:=$KIT/../.kenv/bin/pnpm node}"
# Default to system node if KIT_NODE doesn't exist
[ ! -f $KIT_NODE ] && KIT_NODE=$(which node)

if [[ $KIT =~ ^/[a-zA-Z]/ ]]; then
    drive_letter=${KIT:1:1}
    KIT="${KIT/\/$drive_letter\//\/$drive_letter:/}"
fi

KIT_TARGET="terminal" \
KIT="$KIT" \
KENV="$KENV" \
NODE_NO_WARNINGS=1 \
"$KIT_NODE" \
--loader "file://$KIT/build/loader.js" \
"$KIT/run/terminal.js" \
"$@"