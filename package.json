{
  "name": "@johnlindquist/kit",
  "type": "module",
  "bin": {
    "kit": "bin/kit",
    "sk": "bin/sk",
    "kitblitz": "bin/kitblitz.mjs"
  },
  "engines": {
    "node": ">=14.8.0"
  },
  "version": "0.0.0-development",
  "description": "The Script Kit sdk",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnlindquist/kit.git"
  },
  "exports": {
    ".": "./index.js",
    "./*": "./*",
    "./api/*": "./api/*.js",
    "./cli/*": "./cli/*.js",
    "./target/*": "./target/*.js",
    "./platform/*": "./platform/*.js",
    "./run/*": "./run/*.js",
    "./core/*": "./core/*.js",
    "./workers": "./workers/index.js"
  },
  "types": "./types/index.d.ts",
  "scripts": {
    "build-kit": "node ./build/build-kit.js && npm run build-editor-types",
    "commit": "cz",
    "rebuild-kit": "node ./build/rebuild-kit.js && npm run build-editor-types",
    "download-md": "node ./build/download-md.js",
    "dev": "tsc --watch --outDir ~/.kit",
    "declaration": "tsc -p ./tsconfig-declaration.json --watch",
    "pretest:core": "node ./scripts/test-pre.js",
    "test:core": "NODE_NO_WARNINGS=1 ava ./src/core/*.test.js --no-worker-threads",
    "posttest:core": "node ./scripts/test-post.js",
    "pretest": "node ./scripts/test-pre.js",
    "test": "NODE_NO_WARNINGS=1 ava --no-worker-threads",
    "posttest": "node ./scripts/test-post.js",
    "build-editor-types": "kit ./build/build-editor-types.ts",
    "rebuild-test": "npm run rebuild-kit && npm run test -- --fail-fast",
    "lazy-install": "npm i esbuild@0.21.4 --save-exact --production --prefer-dedupe --loglevel=verbose"
  },
  "author": "John Lindquist (https://johnlindquist.com)",
  "license": "ISC",
  "dependencies": {
    "@johnlindquist/globals": "1.16.4",
    "@johnlindquist/kit-internal": "^1.13.3",
    "@johnlindquist/open": "^10.1.1",
    "@octokit/auth-oauth-device": "7.1.1",
    "@octokit/core": "6.1.2",
    "@octokit/plugin-paginate-rest": "11.3.0",
    "@octokit/plugin-rest-endpoint-methods": "13.2.1",
    "@octokit/plugin-retry": "7.1.1",
    "@octokit/plugin-throttling": "9.3.0",
    "@types/node-notifier": "8.0.5",
    "@types/shelljs": "0.8.15",
    "@typescript/lib-dom": "npm:@johnlindquist/no-dom@^1.0.2",
    "advanced-calculator": "1.1.1",
    "body-parser": "^1.20.2",
    "chrome-trace-event": "^1.0.4",
    "dotenv": "^16.4.5",
    "esbuild": "0.21.4",
    "express": "^4.19.2",
    "file-icon": "5.1.1",
    "filesize": "10.1.2",
    "fs-extra": "^11.2.0",
    "globby": "^14.0.1",
    "highlight.js": "^11.9.0",
    "isomorphic-git": "1.25.10",
    "keyv": "^4.5.4",
    "keyv-file": "^0.3.1",
    "node-notifier": "10.0.1",
    "p-limit": "^5.0.0",
    "quick-score": "^0.2.0",
    "rimraf": "5.0.7",
    "safe-stable-stringify": "^2.4.3",
    "shelljs": "0.8.5",
    "slugify": "1.6.6",
    "suggestion": "2.1.2",
    "zx": "^8.1.2"
  },
  "devDependencies": {
    "@types/debug": "4.1.12",
    "@types/express": "4.17.21",
    "@types/express-ws": "3.0.4",
    "@types/node": "^20.13.0",
    "@types/node-ipc": "9.2.3",
    "ava": "6.1.3",
    "cz-conventional-changelog": "^3.3.0",
    "debug": "4.3.5",
    "semantic-release": "24.0.0",
    "semantic-release-plugin-update-version-in-files": "1.1.0",
    "tsc-watch": "6.2.0",
    "typescript": "5.4.5",
    "unzipper": "0.11.6"
  },
  "ava": {
    "environmentVariables": {
      "KIT_TEST": "true"
    },
    "verbose": true,
    "files": [
      "src/**/*.test.js",
      "test/**/*.test.js"
    ]
  },
  "release": {
    "branches": [
      "+([0-9]).x",
      "main",
      "next",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./.kit"
        }
      ],
      [
        "semantic-release-plugin-update-version-in-files",
        {
          "files": [
            "./.kit/package.json"
          ]
        }
      ]
    ]
  },
  "volta": {
    "node": "20.11.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
